  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "scripts": {
    "build": "webpack -p --mode production --config ./webpack.config.cjs",
    "dev": "concurrently \"yarn run watch:server\" \"yarn run watch:client \" ",
